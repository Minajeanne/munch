<div class="container">
  <header><img src="xxx" class="img-responsive main-image"></header>
  <div class="col-md-8 col-md-offset-2">
    <h2>MUNCH</h2>

    <div class="content">
      <p>Welcome to MUNCH!</p>

      <form action="/signup" method="GET">
        <input type="submit" value="Sign Up" class="button">
      </form>

      <form action="/login" method="GET">
        <input type="submit" value="Log In" class="button">
      </form>

      <!-- <h3><a href="/login">Log In</a></h3>
      <h3><a href="/signup">Create Account</a></h3> -->
    </div>

    <div class="sidebar">
      <h3>Environment</h3>
      <ul>
        <li><b>Ruby:</b> <%= RUBY_VERSION %></li>
        <li><b>Environment:</b> <%= ENV["RACK_ENV"] %></li>
        <li><b>Server:</b> <%= @env["SERVER_SOFTWARE"] %></li>
        <li><b>Port:</b> <%= @env["SERVER_PORT"] %></li>
      </ul>
    </div>

  </div>
</div>
